---
import { Picture } from "astro:assets";

import Layout from "@layouts/layout.astro";
import myPortrait from "@assets/my-portrait.jpg";
---

<Layout title="Home.">
  <div class="my-portrait-wrapper">
    <Picture
      src={myPortrait}
      alt="Me, looking all nice and cute"
      class="my-portrait"
      loading="eager"
      fetchpriority="high"
      formats={["avif", "webp"]}
    />
    <span class="my-first-name" aria-hidden="true">Dmitrii</span>
    <span class="my-last-name" aria-hidden="true">Kirshanov</span>
  </div>
  <h1 class="visually-hidden">Dmitrii Kirshanov.</h1>
  <h2>Haiii!</h2>
  <p>My name's Dmitrii, and I'm glad to welcome you on my personal web page!</p>
  <p>I live in Armenia and I develop stuff.</p>
  <p>I'm passionate about AR/VR, music, and coffee.</p>
  <p>
    This page is under construction, so get back later to get to know me better!
  </p>
</Layout>

<style>
  .my-portrait-wrapper {
    max-width: 500px;
    margin: 0 auto;
    position: relative;

    @media (min-width: 530px) {
      margin-top: 1.5rem;
      margin-bottom: 2.5rem;
    }
  }

  .my-first-name,
  .my-last-name {
    position: absolute;
    font-size: 2rem;
    font-family: var(--fancy-font-stack);
    padding: 0.1em 0.5em;
    border-top: 1px solid currentcolor;
    border-bottom: 1px solid currentcolor;
    color: var(--white);
    mix-blend-mode: exclusion;
  }

  .my-first-name {
    top: 0;
    right: 0;
  }

  .my-last-name {
    bottom: 0;
    left: 0;
  }

  .my-portrait {
    height: auto;
    margin: 0;
    object-fit: cover;
    clip-path: polygon(0% 0%, 100% 15%, 100% 100%, 0% 85%);
  }
</style>
