---
import type {
  InferGetStaticParamsType,
  InferGetStaticPropsType,
  GetStaticPaths,
} from "astro";
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import { getTags } from "@utils/get-tags";

export const getStaticPaths = (async () => {
  const blogPosts = await getCollection("blog-posts");
  const tags: string[] = getTags(blogPosts);

  return tags.map((tag) => {
    const taggedPosts = blogPosts.filter((post) =>
      post.data.tags.includes(tag),
    );

    return {
      params: { tag },
      props: { taggedPosts },
    };
  });
}) satisfies GetStaticPaths;

const { tag }: InferGetStaticParamsType<typeof getStaticPaths> = Astro.params;
const { taggedPosts }: InferGetStaticPropsType<typeof getStaticPaths> =
  Astro.props;
---

<Layout title={`Blog. Posts tagged with "${tag}".`}>
  <h1>Posts tagged with "{tag}":</h1>
  <ul>
    {
      taggedPosts.map((post) => (
        <li>
          <a href={`/blog/posts/${post.slug}`}>{post.data.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
